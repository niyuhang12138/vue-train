{
    "compilerOptions": {
        "outDir": "dist", // 输出目录
        "sourceMap": true, // 生成 source map 文件
        "target": "ES2016", // 目标语法
        "module": "ESNext", // 模块格式
        "moduleResolution": "node", // 模块解析方式
        "strict": false, // 严格模式
        "resolveJsonModule": true, // 允许导入 JSON 文件
        "esModuleInterop": true, // 允许默认导入非 ES 模块
        "jsx": "preserve", // JSX 语法处理
        "lib": ["ESNext", "DOM"], // 支持的类库
        "baseUrl": ".", // 基础目录
        "paths": {
            "@vue/*": ["packages/*/src"] // 路径别名
        }
    }
}
